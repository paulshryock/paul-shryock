{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "ignorePatterns": [
    "build",
    "node_modules",
    "tsconfig.json",
    "package-lock.json"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "json-format"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "indent": [
      "error",
      "tab",
      {
        "offsetTernaryExpressions": true
      }
    ],
    "multiline-ternary": [
      "error",
      "always-multiline"
    ],
    "no-tabs": "off"
  }
}