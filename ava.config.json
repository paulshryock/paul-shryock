{
  "files": [
    "./*.{ts,js}",
    "./{scripts,src}/**/*.test.{ts,js}"
  ],
  "extensions": [
    {
      "ts": "module"
    }
  ],
  "nodeArguments": [
    "--loader=ts-node/esm"
  ],
  "nonSemVerExperiments": {
    "configurableModuleFormat": true
  },
  "typescript": {
    "rewritePaths": {
      "scripts/": "scripts/",
      "src/": "build/"
    },
    "compile": false
  }
}