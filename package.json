{
  "name": "paul-shryock",
  "version": "0.3.0-nightly.0",
  "private": true,
  "description": "Source code for my personal website.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulshryock/paul-shryock.git"
  },
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "build": "node --loader ts-node/esm --experimental-specifier-resolution=node -r dotenv/config ./bin/build.ts",
    "postbuild": "run-p check:*",
    "check:health": "node --loader ts-node/esm --experimental-specifier-resolution=node -r dotenv/config ./bin/health-check.ts",
    "check:seo": "node --loader ts-node/esm --experimental-specifier-resolution=node -r dotenv/config ./bin/seo-check.ts",
    "clean": "rm -rf ./dist",
    "format": "prettier --loglevel=warn --write \"./!(vendor)/**/*.{ts,js,{m,c}js,json}\"",
    "lint": "run-p lint:*",
    "prelint:env": "touch .env",
    "lint:env": "sync-dotenv",
    "lint:js": "eslint \"./!(vendor)/**/*.{ts,d.ts,js,{m,c}js,json}\" --fix",
    "lint:pkg": "sort-package-json",
    "prepare": "husky install bin/husky",
    "quality": "npm-run-all --serial format --parallel lint typecheck test",
    "serve": "BUILD_SERVE=true BUILD_WATCH=true npm run build",
    "start": "run-s clean serve",
    "test": "jest --coverage",
    "test:watch": "npm test -- --watch",
    "typecheck": "tsc",
    "typecheck:watch": "npm run typecheck -- --watch",
    "preversion": "release-bump && git add ."
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.143",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "chokidar": "^3.5.3",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "node-html-parser": "^5.2.0",
    "npm-check-updates": "^12.4.0",
    "npm-run-all2": "^5.0.2",
    "prettier": "^2.5.1",
    "release-bump": "^2.2.1",
    "sass": "^1.49.8",
    "sort-package-json": "^1.54.0",
    "sync-dotenv": "^2.6.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "zx": "^5.1.0"
  },
  "engines": {
    "node": "^17",
    "npm": "^8.1"
  }
}