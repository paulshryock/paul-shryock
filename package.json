{
  "name": "paul-shryock",
  "version": "0.2.0",
  "private": true,
  "description": "Source code for my personal website.",
  "homepage": "https://github.com/paulshryock/paul-shryock#readme",
  "bugs": {
    "url": "https://github.com/paulshryock/paul-shryock/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulshryock/paul-shryock.git"
  },
  "license": "Hippocratic 2.1",
  "author": "Paul Shryock <paul@pshry.com> (https://github.com/paulshryock)",
  "type": "module",
  "scripts": {
    "build": "node --loader ts-node/esm ./scripts/build.ts",
    "lint": "run-s lint:*",
    "lint:js": "eslint \"./**/*.{ts,js,json}\" --fix",
    "lint:pkg": "sort-package-json",
    "serve": "serve dist",
    "test": "ava",
    "test:watch": "ava --watch",
    "typecheck": "tsc",
    "typecheck:watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ],
    "./**/*.{ts,js,json}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^2.0.0",
    "@tsconfig/node16": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^3.15.0",
    "esbuild": "^0.13.4",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-ava": "^13.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.2",
    "npm-run-all2": "^5.0.2",
    "serve": "^12.0.1",
    "sort-package-json": "^1.52.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "^16.11",
    "npm": "^8"
  }
}